<div id="{{modal}}" class="modal {{size}} {{modal}}" data-module="modal" data-align="{{ align is defined ? align : 'center'}}">
    <div class="modal__backdrop" data-close></div>
    <div class="modal__inner">
		<a class="modal__close" data-close><i class="fa fa-close"></i></a>
        <div class="modal__body">
            {% include '2_pieces/modals/' ~ modal ~ '.twig' %}
        </div>
    </div>
</div>
