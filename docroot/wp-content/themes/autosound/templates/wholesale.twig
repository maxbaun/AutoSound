{% extends '1_core/layout.twig' %}

{% block page %}
	{% include '4_regions/hero--title.twig' with {
		hero: {
			title: post.get_field('heroTitleTitle') != '' ? post.get_field('heroTitleTitle') : post.post_title,
			breadcrumbs: breadcrumbs
		}
	} %}
	{% for section in post.get_field('wholesaleSections') %}
		{% include '4_regions/section--wholesale.twig' with {
			data: section
		} %}
	{% endfor %}
	{% include '4_regions/section--wholesale__forms.twig' with {
		page: {
			title: post.get_field('contactPageTitle'),
			form: post.get_field('contactPageForm')
		}
	} %}
{% endblock %}
