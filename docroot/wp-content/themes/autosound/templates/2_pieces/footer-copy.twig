<div class="footer-copy">
	<div class="global-footer__container">
		<div class="row">
			<span class="span-12 span-6@menuBreakpoint">
				<span class="footer-copy__copy">{{ options.footer.copyright }}</span>
			</span>
			<span class="span-12 span-6@menuBreakpoint">
				<nav class="footer-copy__nav">
					<ul>
						{% for item in footerMenu.items %}
							<li class="{{ item.classes|join(' ') }}">
								<a class="footer-copy__nav__link" href="{{item.link}}">{{item.title}}</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</span>
		</div>
	</div>
</div>
